###require
alias rm='rm -i'
alias l.='ls -d .* --color=auto'
alias vi='vim'
alias javac="javac -J-Dfile.encoding=utf8"
alias grep="grep --color=auto"
alias -s txt=vi #在shell里面直接输入txt文件，直接用vim打开
alias -s gz='tar -xzvf'
alias -s tgz='tar -xzvf'
alias -s zip='unzip'
alias -s bz2='tar -xjvf'
alias tf="tail -f"
alias cls='clear'
alias ps='ps -ef'
alias q='exit'
#alias sp='~/tools/.sp.sh'
alias sp='~/soft/sh-toolkits-lib/sp.sh'
alias get='sh ~/soft/sh-toolkits-lib/sp.sh'
#设置窗口的名字为best
alias t='tmux -2 -u attach || tmux -2 -u new-session -s hi'
#新建一個有名字的窗口
alias tn='tmux -2 -u new-session -s'
#附上一個有名字的窗口
alias ta='tmux attach -t'
alias hd='od -Ax -tx1z -v' #方便的十六进制输出。 (用法举例: • hd /proc/self/cmdline | less)
alias realpath='readlink -f'  #显示符号链接指向的真实路径((用法举例: • realpath ~/../$USER)

