# Editor
# 让vim不带插件的运行,速度非常快
alias v='/usr/bin/vim --cmd "let g:vimrc_no_plugin=1"'
# alias vi='/usr/bin/vim'
alias less='/usr/share/vim/vim74/macros/less.sh' # replace sys less
# use `emacs --daemon` and then `emacsclient filename`
alias ec='emacsclient -a "" -c' # `-a ''` attempt to connect to an existing server, and if no server exists, start one then connect to it.
alias et='emacsclient -t'  # 适合 GUI 时，启动一个新的 frame (-n) 
alias en='emacsclient -n'  # 适合 终端运行(emacs --daemon) 后


alias javac="javac -J-Dfile.encoding=utf8"
alias grep="grep --color=auto"
alias -s txt=vi #在shell里面直接输入txt文件，直接用vim打开
alias -s tex=vim
alias -s gz='tar -xzvf'
alias -s tgz='tar -xzvf'
alias -s zip='unzip'
alias -s bz2='tar -xjvf'
