#!/usr/bin/env bash

DIR=$(dirname ~)
HOME=$DIR/$USER

manfile="$HOME/.dotfiles/linux_log.md $HOME/wiki/ $HOME/.dotfiles/linux_assist.md"

if [[ $1 == "m" ]]; then
  if [[ -z $2 ]]; then
    echo "require second word"
    exit;
  fi
  cheat $2
else
  if [[ $1 ]]; then
  #   hash ag 2>/dev/null || {
       # if not installed ag
       # grep -r -n -B 1 -A 2 "$1" $manfile
       # grep --color=auto -rn -B 1 -A 2 "$1" $manfile
       # -h 隐藏文件名
       # -r 递归查找
       # -n 显示行号
  #   }
  # else
    ag -B 1 -A 2 "$1" $manfile
  fi
fi

