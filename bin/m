#!/bin/env bash
DIR=$(dirname ~)
HOME=$DIR/$USER

manfile="$HOME/.dotfiles/LINUX_TIPS.md $HOME/.dotfiles/doc/"

if [[ $1 == "m" ]]; then
    if [[ -z $2 ]]; then
        echo "require second word"
    fi
    cheat $2
else
    if [[ $1 ]]; then
        grep -h -r -n -A 1 -B 1 "$1" $manfile
    fi
fi

